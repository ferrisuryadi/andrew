@{
    ViewData["Title"] = "Cost Shipping";
}
@model fms.Models.trCostShipping;
@section Header
    {
    <link rel="stylesheet" href="~/AdminLTE/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">
                    <a asp-controller="CostShipping" asp-action="create" class="btn btn-primary">Create New</a>
                </h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.id)</th>
                            <th>@Html.DisplayNameFor(model => model.referenceNo)</th>
                            <th>@Html.DisplayNameFor(model => model.shippingDate)</th>
                            <th>@Html.DisplayNameFor(model => model.validDate)</th>
                            <th>@Html.DisplayNameFor(model => model.portOfLoadingId)</th>
                            <th>@Html.DisplayNameFor(model => model.userIdSales)</th>
                            <th>@Html.DisplayNameFor(model => model.shipLineRefNo)</th>
                            <th>@Html.DisplayNameFor(model => model.shippingInfoKode)</th>
                            <th>@Html.DisplayNameFor(model => model.remark)</th>
                            <th>@Html.DisplayNameFor(model => model.isActive)</th>
                            <th>@Html.DisplayNameFor(model => model.createdBy)</th>
                            <th>@Html.DisplayNameFor(model => model.createdOn)</th>
                            <th>@Html.DisplayNameFor(model => model.updatedBy)</th>
                            <th>@Html.DisplayNameFor(model => model.updatedOn)</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.Items)
                        {
                            <tr>
                                <td>@item.id</td>
                                <td>@item.referenceNo</td>
                                <td>@item.shippingDate.ToString("dd-MMM-yyyy")</td>
                                <td>@item.validDate.ToString("dd-MMM-yyyy")</td>
                                @if (@item.portOfLoading != null)
                                {
                                    <td>@item.portOfLoading.port</td>
                                }
                                else
                                {
                                    <td>&nbsp;</td>
                                }
                                @if (@item.user != null)
                                {
                                    <td>@item.user.name</td>
                                }
                                else
                                {
                                    <td>&nbsp;</td>
                                }
                                <td>@item.shipLineRefNo</td>
                                <td>@item.shippingInfoKode</td>
                                <td>@item.remark</td>
                                @if (@item.isActive)
                                {
                                    <td><a class="btn btn-success" asp-controller="CostShipping" asp-action="isActive" asp-route-id="@item.id">True</a></td>
                                }
                                else
                                {
                                    <td><a class="btn btn-danger" asp-controller="CostShipping" asp-action="isActive" asp-route-id="@item.id">False</a></td>
                                }
                                <td>@item.createdBy</td>
                                <td>@item.createdOn.ToString("dd-MMM-yyyy HH:mm:ss")</td>
                                <td>@item.updatedBy</td>
                                <td>@item.updatedOn.ToString("dd-MMM-yyyy HH:mm:ss")</td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a asp-controller="CostShipping" asp-action="edit" asp-route-id="@item.id">Edit</a></li>
                                            <li><a asp-controller="CostShipping" asp-action="delete" asp-route-id="@item.id" onclick="return confirm('Are you sure?')">Delete</a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.id)</th>
                            <th>@Html.DisplayNameFor(model => model.referenceNo)</th>
                            <th>@Html.DisplayNameFor(model => model.shippingDate)</th>
                            <th>@Html.DisplayNameFor(model => model.validDate)</th>
                            <th>@Html.DisplayNameFor(model => model.portOfLoadingId)</th>
                            <th>@Html.DisplayNameFor(model => model.userIdSales)</th>
                            <th>@Html.DisplayNameFor(model => model.shipLineRefNo)</th>
                            <th>@Html.DisplayNameFor(model => model.shippingInfoKode)</th>
                            <th>@Html.DisplayNameFor(model => model.remark)</th>
                            <th>@Html.DisplayNameFor(model => model.isActive)</th>
                            <th>@Html.DisplayNameFor(model => model.createdBy)</th>
                            <th>@Html.DisplayNameFor(model => model.createdOn)</th>
                            <th>@Html.DisplayNameFor(model => model.updatedBy)</th>
                            <th>@Html.DisplayNameFor(model => model.updatedOn)</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
@section scripts{
    <script src="@Url.Content("~/AdminLTE/bower_components/datatables.net/js/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/AdminLTE/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js")"></script>
    <script>$(function () {
    $('#example1').DataTable()
  })</script>
}