@{
    ViewData["Title"] = "Services";
}

@model fms.Models.mtServices;

@section Header
{
    <link rel="stylesheet" href="~/AdminLTE/bower_components/select2/dist/css/select2.min.css">
}

@if (ViewBag.Error)
{
    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h4><i class="icon fa fa-ban"></i> Error!</h4>
        @Html.ValidationSummary()
    </div>
}

<div class="row">
    <!-- left column -->
    <div class="col-xs-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <form role="form" method="post" asp-controller="Services" asp-action="Create">
                <div class="box-body">
                    <div class="form-group">
                        <label for="code">@Html.DisplayNameFor(model => model.code)</label>
                        <input type="text" class="form-control" id="port" asp-for="code" autofocus>
                    </div>
                    <div class="form-group">
                        <label for="description">@Html.DisplayNameFor(model => model.description)</label>
                        <input type="text" class="form-control" id="port" asp-for="description">
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="hargaPerCon" id="hargaPerCon"> @Html.DisplayNameFor(model => model.hargaPerCon)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(model => model.groupId)</label>
                            <select class="form-control select2" style="width: 100%;" asp-for="groupId">
                                <option value="0">No Value</option>
                                @foreach (var item in ViewBag.Groups)
                                {
                                    <option value="@item.id">@item.code - @item.description</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(model => model.coaIdUsd)</label>
                            <select class="form-control select2" style="width: 100%;" asp-for="coaIdUsd">
                                <option value="0">No Value</option>
                                @foreach (var item in ViewBag.CoaUsd)
                                {
                                    <option value="@item.id">@item.code - @item.description</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(model => model.coaIdIdr)</label>
                            <select class="form-control select2" style="width: 100%;" asp-for="coaIdIdr">
                                <option value="0">No Value</option>
                                @foreach (var item in ViewBag.CoaIdr)
                                {
                                    <option value="@item.id">@item.code - @item.description</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" asp-for="isActive"> @Html.DisplayNameFor(model => model.isActive)
                        </label>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Save</button>&nbsp;
                    <a class="btn btn-default" asp-controller="Services" asp-action="index">Cancel</a>
                </div>
            </form>
        </div>
        <!-- /.box -->
    </div>
    <!--/.col (left) -->
</div>

@section scripts{
    <script src="@Url.Content("~/AdminLTE/bower_components/select2/dist/js/select2.full.min.js")"></script>

    <script type="text/javascript">
        $(function () {
            $('.select2').select2();
        });

    </script>
}