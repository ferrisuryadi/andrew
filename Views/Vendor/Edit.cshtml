@{
    ViewData["Title"] = "Vendor";
}
@model fms.Models.mtVendor;
@section Header
{
    <link rel="stylesheet" href="~/AdminLTE/bower_components/select2/dist/css/select2.min.css">
}

<form role="form" method="post" asp-controller="Vendor" asp-action="Edit">
    <div class="row">
        <!-- left column -->
        <div class="col-xs-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <!-- form start -->
                <div class="box-body">
                    <div class="col-xs-3">
                        <div class="form-group">
                            <label for="code">@Html.DisplayNameFor(model => model.code)</label>
                            <input type="text" class="form-control" id="code" asp-for="code" autofocus>
                        </div>
                        <div class="form-group">
                            <label for="name">@Html.DisplayNameFor(model => model.name)</label>
                            <input type="text" class="form-control" id="name" asp-for="name">
                        </div>
                        <div class="form-group">
                            <label for="address">@Html.DisplayNameFor(model => model.attention)</label>
                            <input type="text" class="form-control" id="attention" asp-for="attention">
                        </div>
                        <div class="form-group">
                            <label for="email">@Html.DisplayNameFor(model => model.email)</label>
                            <input type="text" class="form-control" id="email" asp-for="email">
                        </div>
                        <div class="form-group">
                            <label for="website">@Html.DisplayNameFor(model => model.website)</label>
                            <input type="text" class="form-control" id="website" asp-for="website">
                        </div>
                    </div>
                    <div class="col-xs-3">
                        <div class="form-group">
                            <label for="phone">@Html.DisplayNameFor(model => model.phone)</label>
                            <input type="text" class="form-control" id="phone"  asp-for="phone">
                        </div>

                        <div class="form-group">
                            <label for="fax">@Html.DisplayNameFor(model => model.fax)</label>
                            <input type="text" class="form-control" id="fax" asp-for="fax">
                        </div>
                        <div class="form-group">
                            <label for="province">@Html.DisplayNameFor(model => model.province)</label>
                            <input type="text" class="form-control" id="province" asp-for="province">
                        </div>
                        <div class="form-group">
                            <label for="city">@Html.DisplayNameFor(model => model.city)</label>
                            <input type="text" class="form-control" id="city" asp-for="city">
                        </div>
                        <div class="form-group">
                            <label for="district">@Html.DisplayNameFor(model => model.district)</label>
                            <input type="text" class="form-control" id="district" asp-for="district">
                        </div>
                    </div>

                    <div class="col-xs-3">
                        <div class="form-group">
                            <label for="subDistrict">@Html.DisplayNameFor(model => model.subDistrict)</label>
                            <input type="text" class="form-control" id="subDistrict" asp-for="subDistrict">
                        </div>

                        <div class="form-group">
                            <label for="village">@Html.DisplayNameFor(model => model.village)</label>
                            <input type="text" class="form-control" id="village" asp-for="village">
                        </div>
                        <div class="form-group">
                            <label for="subVillage">@Html.DisplayNameFor(model => model.subVillage)</label>
                            <input type="text" class="form-control" id="subVillage" asp-for="subVillage">
                        </div>
                        <div class="form-group">
                            <label for="block">@Html.DisplayNameFor(model => model.block)</label>
                            <input type="text" class="form-control" id="block" asp-for="block">
                        </div>
                        <div class="form-group">
                            <label for="postalCode">@Html.DisplayNameFor(model => model.postalCode)</label>
                            <input type="text" class="form-control" id="postalCode" asp-for="postalCode">
                        </div>
                    </div>
                    <div class="col-xs-3">
                        <div class="form-group">
                            <label for="remark">@Html.DisplayNameFor(model => model.remark)</label>
                            <input type="text" class="form-control" id="remark" asp-for="remark">
                        </div>
                        <div class="form-group">
                            <div class="form-group">
                                <label>@Html.DisplayNameFor(model => model.coaIdIdr)</label>
                                <select class="form-control select2" style="width: 100%;" id="coaIdIdr" asp-for="coaIdIdr">
                                    <option value="0">No Parent</option>
                                    @foreach (var item in ViewBag.ChartOfAccountsIdr)
                                    {
                                        <option value="@item.id">@item.code</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-group">
                                <label>@Html.DisplayNameFor(model => model.coaIdIdr)</label>
                                <select class="form-control select2" style="width: 100%;" id="coaIdIdr" asp-for="coaIdUsd">
                                    <option value="0">No Parent</option>
                                    @foreach (var item in ViewBag.ChartOfAccountsUsd)
                                    {
                                        <option value="@item.id">@item.code</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-group">
                                <label>@Html.DisplayNameFor(model => model.typeId)</label>
                                <select class="form-control select2" style="width: 100%;" id="typeId" asp-for="typeId">
                                    <option value="0">No Parent</option>
                                    @foreach (var item in ViewBag.Type)
                                    {
                                        <option value="@item.id">@item.code - @item.description</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="isActive" asp-for="isActive"> @Html.DisplayNameFor(model => model.isActive)
                            </label>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <input type="hidden" asp-for="id">
                    <input type="hidden" asp-for="createdBy">
                    <input type="hidden" asp-for="createdOn">
                    <button type="submit" class="btn btn-primary">Save</button>&nbsp;
                    <a class="btn btn-default" asp-controller="Vendor" asp-action="index">Cancel</a>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (left) -->
        <div class="col-xs-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body table-responsive">
                    <table class="table table-bordered table-striped" id="VendorDetails">
                        <thead>
                            <tr>
                                <th style="display:none">Id</th>
                                <th>Contact Person</th>
                                <th>Telepon</th>
                                <th>Position</th>
                                <th>Address</th>
                                <th>Handphone</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.VendorDetails)
                            {
                                <tr>
                                    <td style="display:none;">@item.id</td>
                                    <td>@item.contactPerson</td>
                                    <td>@item.telepon</td>
                                    <td>@item.position</td>
                                    <td>@item.address</td>
                                    <td>@item.handphone</td>
                                    <td>@item.email</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</form>
@section scripts{
    <script src="@Url.Content("~/AdminLTE/bower_components/select2/dist/js/select2.full.min.js")"></script>
    <script src="@Url.Content("https://code.jquery.com/jquery-2.2.4.min.js")"></script>
    <script>$(function () {
            $('.select2').select2()
        })</script>
}