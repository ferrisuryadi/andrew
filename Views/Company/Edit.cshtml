@{
    ViewData["Title"] = "Company";
}
@model fms.Models.mtCompany;
@section Header
    {
    <link rel="stylesheet" href="~/AdminLTE/bower_components/select2/dist/css/select2.min.css">
}
<form role="form" method="post" asp-controller="Company" asp-action="Edit">
    <div class="row">
        <!-- left column -->
        <div class="col-xs-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <!-- form start -->
                    <div class="box-body">
                        <div class="col-xs-4">
                        <div class="form-group">
                            <label for="company">@Html.DisplayNameFor(model => model.company)</label>
                            <input type="text" class="form-control" id="company" asp-for="company" autofocus>
                        </div>
                        <div class="form-group">
                            <label for="name">@Html.DisplayNameFor(model => model.name)</label>
                            <input type="text" class="form-control" id="name" asp-for="name">
                        </div>
                        <div class="form-group">
                            <label for="address">@Html.DisplayNameFor(model => model.address)</label>
                            <input type="text" class="form-control" id="address" asp-for="address">
                        </div>
                        <div class="form-group">
                            <label for="email">@Html.DisplayNameFor(model => model.email)</label>
                            <input type="text" class="form-control" id="email" asp-for="email">
                        </div>
                        <div class="form-group">
                            <label for="website">@Html.DisplayNameFor(model => model.website)</label>
                            <input type="text" class="form-control" id="website" asp-for="website">
                        </div>
                    </div>
                    <div class="col-xs-4">
                        <div class="form-group">
                            <label for="telepon">@Html.DisplayNameFor(model => model.telepon)</label>
                            <input type="text" class="form-control" id="telepon" asp-for="telepon">
                        </div>
                        <div class="form-group">
                            <label for="fax">@Html.DisplayNameFor(model => model.fax)</label>
                            <input type="text" class="form-control" id="fax" asp-for="fax">
                        </div>
                        <div class="form-group">
                            <label for="taxNo">@Html.DisplayNameFor(model => model.taxNo)</label>
                            <input type="text" class="form-control" id="taxNo" data-inputmask='"mask": "99.999.999.9-999.999"' asp-for="taxNo">
                        </div>
                        <div class="form-group">
                            <label for="remark">@Html.DisplayNameFor(model => model.remark)</label>
                            <input type="text" class="form-control" id="remark" asp-for="remark">
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="isActive" asp-for="isActive"> @Html.DisplayNameFor(model => model.isActive)
                            </label>
                        </div>
                    </div>

                    <div class="col-xs-4">
                        <div class="form-group">
                            <div class="form-group">
                                <label>@Html.DisplayNameFor(model => model.coaIdIdr)</label>
                                <select class="form-control select2" style="width: 100%;" id="coaIdIdr" asp-for="coaIdIdr">
                                    <option value="0">No Parent</option>
                                    @foreach (var item in ViewBag.ChartOfAccountsIdr)
                                    {
                                        <option value="@item.id">@item.code</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-group">
                                <label>@Html.DisplayNameFor(model => model.coaIdIdr)</label>
                                <select class="form-control select2" style="width: 100%;" id="coaIdIdr" asp-for="coaIdUsd">
                                    <option value="0">No Parent</option>
                                    @foreach (var item in ViewBag.ChartOfAccountsUsd)
                                    {
                                        <option value="@item.id">@item.code</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-group">
                                <label>@Html.DisplayNameFor(model => model.typeId)</label>
                                <select class="form-control select2" style="width: 100%;" id="typeId" asp-for="typeId">
                                    <option value="0">No Parent</option>
                                    @foreach (var item in ViewBag.Type)
                                    {
                                        <option value="@item.id">@item.code - @item.description</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <input type="hidden" asp-for="id">
                    <input type="hidden" asp-for="createdBy">
                    <input type="hidden" asp-for="createdOn">
                    <button type="submit" class="btn btn-primary">Save</button>&nbsp;
                    <a class="btn btn-default" asp-controller="Company" asp-action="index">Cancel</a>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (left) -->
        <div class="col-xs-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body table-responsive">
                    <table class="table table-bordered table-striped" id="Details">
                        <thead>
                            <tr>
                                <th style="display:none">Id</th>
                                <th>Contact Person</th>
                                <th>Telepon</th>
                                <th>Position</th>
                                <th>Address</th>
                                <th>Handphone</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.CompanyDetails)
                            {
                                <tr>
                                    <td style="display:none;">@item.id</td>
                                    <td>@item.contactPerson</td>
                                    <td>@item.telepon</td>
                                    <td>@item.position</td>
                                    <td>@item.address</td>
                                    <td>@item.handphone</td>
                                    <td>@item.email</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</form>
@section scripts{
    <script src="@Url.Content("~/AdminLTE/bower_components/select2/dist/js/select2.full.min.js")"></script>
    <script src="@Url.Content("https://code.jquery.com/jquery-2.2.4.min.js")"></script>
    <script>$(function () {
            $('.select2').select2()
        })</script>
}